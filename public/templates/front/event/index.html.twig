{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1 class="m-3">Find events</h1>
    <hr>
    <p><a href="{{ path('front_event_new') }}"><button class="btn btn-md btn-primary ">Create new event</button></a></p>
    <button class="btn btn-primary" id="display-search"><i class="fa fa-search"></i> Search</button>

    <div class="d-none" id="search">
        <div class="form-group">
            <label for="name-filter">Name</label>
            <input type="text" class="form-control filtre-input" id="name-filter" name="name"
                   placeholder="Search by name">
        </div>
        <div class="form-group">
            <label for="date-filter">Date</label>
            <input type="date" class="form-control filtre-input" id="date-filter" placeholder="Search by date" name="date">
        </div>
        <button id="rechercher" class="btn btn-primary">Filter</button>
    </div>
    <div id="list-event" class="row">

    </div>
    <a href="{{ path('front_event_new') }}"><button class="btn btn-md btn-primary mb-5">Create new event</button></a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/eventList.js') }}"></script>
{% endblock %}