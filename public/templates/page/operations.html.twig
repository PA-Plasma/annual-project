{% if 'index' in route %}
    <a href="{{ path(routeSuffix ~ '_show', {'id': entity.id}) }}"><button class="btn"><i class="fas fa-eye text-dark"></i></button></a>
    <a href="{{ path(routeSuffix ~ '_edit', {'id': entity.id}) }}"><button class="btn"><i class="fas fa-pen text-dark"></i></button></a>
{% else %}
    <div class="operations mb-3 ml-2">
        {% if 'show' in route  %}
            <a href="{{ path(routeSuffix ~ '_edit', {'id': entity.id}) }}"><button class="btn"><i class="fas fa-pen text-dark"></i></button></a>
        {% endif %}
        <form method="post" action="{{ path(routeSuffix ~ '_delete', {'id': entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
            <button class="btn"><i class="fas fa-trash text-danger"></i></button>
        </form>
    </div>
{% endif %}