<div class="container">
    {% if event.moduleTournament.matches is empty %}
    <div class="row">
        {% if isOwner(app.user, event) %}
            <div class="col-md-6 offset-4">
                <button class="btn btn-primary text-center" id="init-matches">Générer les matchs du tournoi</button>
            </div>
        {% else %}
            <div class="col-md-12">
                <p>Module en cours de paramètrage</p>
            </div>
        {% endif %}
    </div>
    {% else %}
    {% if winner is not null %}
        <div class="card winner">
            <h1 class="card-header"><i class="fas fa-trophy"></i> Winner</h1>
            <div class="card-body">
               <h5>{{ winner.pseudo }}</h5>
            </div>
        </div><br>
    {% endif %}
    <div style="color:black">
        {% for key, round in rounds %}
        <div class="card round">
            <a data-toggle="collapse" href="#event-image-body" role="button" aria-expanded="true"
               aria-controls="event-image-body">
                <div class="card-header d-flex justify-content-center">
                    <h3>ROUND {{ key }}</h3>
                </div>
            </a>
            <div class="card-body form-row collapse {{ (key == 1) ? 'show' : '' }}" id="event-image-body">
                {% for match in round %}
                {% if round|length == 1 %}
                <div class="col-md-12">
                    {% else %}
                    <div class="col-md-6">
                        {% endif %}
                        <div class="card match" data-match-id="{{ match.id }}">
                            <h5 class="card-header">MATCH {{ match.number }}</h5>
                            <div class="card-body">
                                <h4 class="card-title text-center">
                                    {% for player in match.players %}
                                        {{ player.pseudo }}
                                        {% if not loop.last %} VS {% endif %}
                                    {% endfor %}
                                </h4>
                                {% if match.scores is empty %}
                                    <div class="row" style="margin: 10px 0 10px 0">
                                        {% for player in match.players %}
                                            {% if isOwner(app.user, event) %}
                                                <div class="form-group col-md-6 text-center">
                                                    {#<label for="score_{{ loop.index }}">score J{{ loop.index }}</label>#}
                                                    <div class="">
                                                        <input type="number" class="form-control score"
                                                               id="score_{{ loop.index }}" name="name"
                                                               placeholder="score J{{ loop.index }}"
                                                               data-player-id="{{ player.id }}">
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                        {% if not isOwner(app.user, event) %}
                                            <h5><i>Le match n'est pas terminé.</i></h5>
                                        {% endif %}
                                    </div>
                                {% else %}
                                    <div class="row" style="margin: 10px 0 10px 0;">
                                        {% if not isOwner(app.user, event) %}
                                            <div class="col-md-6 offset-4">
                                        {% endif %}
                                        {% for score in match.scores %}
                                            {% if isOwner(app.user, event) %}
                                                <div class="form-group col-md-6 text-center">
                                                    {#<label for="score_{{ loop.index }}">Score#}
                                                    {#de {{ score.player.pseudo }}</label>#}
                                                    <input type="number" class="form-control score"
                                                           id="score_{{ loop.index }}" name="name"
                                                           placeholder="score_{{ loop.index }}"
                                                           data-player-id="{{ score.player.id }}"
                                                           value="{{ score.score }}"
                                                           data-score-id="{{ score.id }}">
                                                </div>
                                            {% else %}
                                                <h5 style="display: inline-block; text-align: center;">&nbsp;{{ score.score }} {% if not loop.last %} : {% endif %}</h5>
                                            {% endif %}
                                        {% endfor %}
                                        {% if not isOwner(app.user, event) %}
                                            </div>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                {% if isOwner(app.user, event) %}
                                    <a class="btn btn-primary add-score">Add score</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>