{% extends 'base.html.twig' %}

{% block title %}Entrant index{% endblock %}

{% block body %}
    <h1>Entrant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entrant in entrants %}
            <tr>
                <td>{{ entrant.id }}</td>
                <td>{{ entrant.pseudo }}</td>
                <td>{{ entrant.state }}</td>
                <td>
                    <a href="{{ path('back_entrant_show', {'id': entrant.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                    <a href="{{ path('back_entrant_edit', {'id': entrant.id}) }}"><i class="fas fa-pen text-dark"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_entrant_new') }}"><button class="btn btn-md btn-primary mt-1">Create new</button></a>
{% endblock %}
