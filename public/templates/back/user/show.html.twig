{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ user.createdAt | date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ user.updatedAt | date('d/m/Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active}}</td>
            </tr>
        </tbody>
    </table>

    {% include 'page/return.html.twig' with {'backPageName': 'back_user_index'} %}

    <a href="{{ path('user_edit', {'slug': user.slug}) }}">edit</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
