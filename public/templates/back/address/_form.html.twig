{{ form_start(form, { 'attr': {'class': 'foo'} }) }}
    <div class="form-row">
        <div class="form-group col-md-2">
            {{ form_row(form.number) }}
        </div>
        <div class="form-group col-md-10">
            {{ form_row(form.road) }}
        </div>
    </div>
    {{ form_row(form.complement) }}
    <div class="form-row">
        <div class="form-group col-md-4">
        {{ form_row(form.city) }}
        </div>
        <div class="form-group col-md-2">
            {{ form_row(form.city_code) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_row(form.country) }}
        </div>
    </div>
    <button class="btn btn-md btn-success mt-1">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
